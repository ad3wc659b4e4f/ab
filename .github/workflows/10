name: Run!

on:
  workflow_dispatch:
    inputs:
      target:
        description: "Target URL for load testing"
        required: true
      repeat_times:
        description: "Number of test iterations"
        required: true
        default: "5"

jobs:
  ab-test1:
    uses: ./.github/workflows/ab.yml
    with:
      target: ${{ github.event.inputs.target }}
